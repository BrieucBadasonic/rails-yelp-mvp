<h1>List of all the restaurants</h1>

<div>
  <%= link_to "create new restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>

<ul class="list-unstyled">
  <% @restaurants.each do |restaurant| %>
  <div class="mb-4">
    <h3><%= restaurant.name %></h3>
    <li><%= restaurant.address %></li>
    <li><%= restaurant.phone_number %></li>
    <li><%= restaurant.category %></li>
    <li><%= link_to 'Details', restaurant_path(restaurant), class: "btn btn-primary" %>
      <%= link_to 'Add a review', new_restaurant_review_path(restaurant), class: "btn btn-primary" %>
    </li>
  </div>
  <% end %>


</ul>
